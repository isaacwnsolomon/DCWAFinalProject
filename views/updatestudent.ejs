<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Student</title>
    <style>
        .error { color: red; }
    </style>
</head>
<body>
    <h1>Update Student</h1>
    
    <!-- Display validation errors if any -->
    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <ul class="error">
            <% errors.forEach(error => { %>
                <li><%= error %></li>
            <% }) %>
        </ul>
    <% } %>

    <ul>
        <li>Student Name should be at least 2 characters</li>
        <li>Student Age should be at least 18</li>
    </ul>

    <form action="/students/update/<%= student.sid %>" method="POST">
        <label for="sid">Student ID:</label>
        <input type="text" id="sid" name="sid" value="<%= student.sid %>" readonly class="readonly"><br>

        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= typeof name !== 'undefined' ? name : student.name %>" required><br>

        <label for="age">Age:</label>
        <input type="number" id="age" name="age" value="<%= typeof age !== 'undefined' ? age : student.age %>" required><br>

        <button type="submit">Update Student</button>
    </form>
</body>
</html>
