<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lecturers</title>

</head>
<body>
    <h1>Lecturers</h1>
    <a href="/"><button>Home</button></a>

    <% if (typeof error !== 'undefined' && error) { %>
        <div style="color: red; margin: 10px 0;">
            <%= error %>
        </div>
    <% } %>
    <table border="1">
        <tr>
            <th>Lecturer ID</th>
            <th>Name</th>
            <th>Department ID</th>
            <th>Action</th>
        </tr>
        <% lecturersList.forEach((lecturer) => { %>
        <tr>
            <td><%= lecturer._id %></td>
            <td><%= lecturer.name %></td>
            <td><%= lecturer.did %></td>
            <td><a href="/lecturers/delete/<%= lecturer._id %>">Delete</a></td>
        </tr>
        <% }) %>
    </table>
</body>
</html>
